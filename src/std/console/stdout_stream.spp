use std::cffi::CFile
use std::mem::ptr::Ptr
use std::number::U8
use std::number::USize
use std::number::S32
use std::result::Fail
use std::result::Pass
use std::result::Res
use std::slice::Slice
use std::streams::WritableStream
use std::streams::StreamErr
use std::void::Void


@public
cmp stdout: StdoutStream = StdoutStream()


@private
cmp stdout_handle: USize = 1_uz


@private
cls StdoutStream { }


sup StdoutStream ext WritableStream {
    fun write(&mut self, data: &Slice[U8]) -> Res[USize, StreamErr] {
        let file_handle = Ptr[CFile]::from_addr(stdout_handle)
        let val = libc::fwrite(&data.mem.ptr.raw, 1_uz, data.length(), &file_handle)
        ret case val < 0_uz { Fail(err=StreamErr(msg="Failed to write to stdout")) } else { Pass(val) }
    }

    fun flush(&mut self) -> Res[Void, StreamErr] {
        let file_handle = &Ptr[CFile]::from_addr(stdout_handle)
        let val = libc::fflush(&file_handle)
        ret case val < 0_s32 { Fail(err=StreamErr(msg="Failed to flush stdout")) } else { Pass[Void]() }
    }

    @no_impl
    fun write_all(&mut self, data: &Slice[U8]) -> Res[USize, StreamErr] {
        # ret self.write(data, data.len()).and_then(|| self.flush())
    }
}
