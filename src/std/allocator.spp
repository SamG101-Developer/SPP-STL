use std::mem::memory::Memory
use std::number::USize
use std::result::Pass
use std::result::Res
use std::string_view::StrView
use std::void::Void


@public
cls AllocException {
    @public msg: StrView
}


@public
cls Alloc[E] { }


sup [E] Alloc[E] {
    @public
    @abstract_method
    fun allocate(n: USize) -> Res[Memory[E], AllocException] { }

    @public
    @abstract_method
    fun allocate_zeroed(n: USize) -> Res[Memory[E], AllocException] { }

    @public
    @abstract_method
    fun deallocate(mem: Memory[E]) -> Void { }

    @public
    @abstract_method
    fun reallocate(mut mem: &mut Memory[E], n: USize) -> Res[Void, AllocException] { }
}


@public
cls GlobalAlloc[E] { }


sup [E] GlobalAlloc[E] ext Alloc[E] {
    fun allocate(n: USize) -> Res[Memory[E], AllocException] {
        let mem = std::mem::ops::malloc[E](n).ok_or(AllocException(msg="Failed to allocate memory"))?
        ret Pass(val=mem)
    }

    fun allocate_zeroed(n: USize) -> Res[Memory[E], AllocException] {
        let mem = std::mem::ops::calloc[E](n).ok_or(AllocException(msg="Failed to allocate zeroed memory"))?
        ret Pass(val=mem)
    }

    fun deallocate(mem: Memory[E]) -> Void {
        std::mem::ops::free[E](mem)
    }

    fun reallocate(mut mem: &mut Memory[E], n: USize) -> Res[Void, AllocException] {
        ret std::mem::ops::realloc[E](&mut mem, n).ok_or(AllocException(msg="Failed to reallocate memory"))
    }
}
